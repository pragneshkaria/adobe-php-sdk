<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml" xmlns="*" layout="vertical"
	title="Login"
    horizontalAlign="center">
	
	<mx:Script>
	    <![CDATA[

		import com.adobe.cairngorm.control.CairngormEventDispatcher;  
		import com.adobe.cairngorm.control.CairngormEvent;     
		import com.renaun.samples.login.control.LoginEvent;
	    import com.renaun.samples.login.model.ModelLocator;      
		import com.renaun.samples.login.vo.LoginVO;
    
		public function loginUser():void
		{
			
			var loginVO : LoginVO = new LoginVO();
			loginVO.username = username.text;
			loginVO.password = password.text;
			var event : LoginEvent = new LoginEvent( loginVO );
			CairngormEventDispatcher.getInstance().dispatchEvent( event );
		}
	          
		[Bindable]
		public var model : ModelLocator = ModelLocator.getInstance();
		]]>
    </mx:Script>

    <mx:Form id="loginForm">
    
        <mx:FormItem label="Username: ">
            <mx:TextInput id="username" text="test" />
        </mx:FormItem>

        <mx:FormItem label="Password: ">
            <mx:TextInput id="password" text="test" />
        </mx:FormItem>
        
    </mx:Form>

    <mx:Text 
    	text="{ model.statusMessage }" 
    	width="400" height="30" 
    	paddingLeft="40" />

    <mx:ControlBar>
        <mx:Button label="Login" click="loginUser()" />
    </mx:ControlBar>
</mx:Panel>
